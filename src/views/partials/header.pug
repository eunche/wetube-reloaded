header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav 
        ul 
            li
                a(href="/search")
                    i.fas.fa-search
            if loggedIn 
                li 
                    a(href="/videos/upload") Upload Video
                li 
                    a(href=`/users/${user._id}`) My Profile
                li 
                    a(href="/users/edit") Edit Profile
                li 
                    a(href="/users/logout") Logout
                if user.avatarURL
                    li
                        if isHeroku
                            img(src=user.avatarURL).header__avatar.js-header__avatar
                        else 
                            img(src=`/${user.avatarURL}`).header__avatar.js-header__avatar
                        
            else    
                li 
                    a(href="/join").header__btn Join
                li 
                    a(href="/login") Login