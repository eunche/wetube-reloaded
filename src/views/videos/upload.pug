extends ../base


block content
    div 
        video#preview
        button#recordingToggleBtn Start Recording
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", name="video", id="video", accept="video/*", required) 
        input(type="text", name="title", placeholder="Title",maxlength=80, required)
        input(type="text", name="description", placeholder="Description",minlength=10, required)
        input(type="text", name="hashtags", placeholder="Hashtags, seperated by comma.", required)
        input(type="submit", value=pageTitle)




block scripts
    script(src="/static/js/recorder.js") 