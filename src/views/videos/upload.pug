extends ../base


block content
    div.upload__container
        div.upload__video.js-upload__video
            video#preview
            button#actionBtn.action-btn Start Recording
        if errorMessage
            span=errorMessage
        form(method="POST", enctype="multipart/form-data")
            label(for="video") Video File
            input(type="file", name="video", id="video", accept="video/*", required) 
            label(for="thumb") Thumbnail File
            input(type="file", accept="image/*", id="thumb", name="thumb")
            input(type="text", name="title", placeholder="Title", maxlength=80, required)
            input(type="text", name="description", placeholder="Description", maxlength=80, required)
            input(type="text", name="hashtags", placeholder="Hashtags, seperated by comma.", required)
            input(type="submit", value=pageTitle)




block scripts
    script(src="/static/js/recorder.js") 