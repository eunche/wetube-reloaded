extends ../base


block content
    div#videoContainer
        video(src=`/${video.fileURL}`)
        div#videoController.js-display_none
            button#play Play
            button#mute Mute 
            input(type="range", value=0.5, min=0, max=1, step=0.02)#volume
            div
                span#currentTime 0:00
                span  / 
                span#totalTime 00:00
            div
                input(type="range", value=0, min=0, step=0.1)#timeline
            button#fullscreen Full Screen
    //-
        div
            p=video.description
            small=video.createdAt
            br
            br
            span Uploaded by 
                a(href=`/users/${video.owner._id}`)=video.owner.name 
        if String(user && user._id) === String(video.owner._id)
            a(href=`${video.id}/edit`) Edit Video &rarr;
            br
            a(href=`${video.id}/delete`) Delete Video &rarr;



block scripts 
    script(src="/static/js/videoPlayer.js") 