extends base.pug


block content
    h4 Change Title Of Video
        form(method="POST")
            input(type="text", name="title", value=video.title, placeholder="Video Title", required)
            input(type="text", name="description", value=video.description, placeholder="Description",minlength=10, required)
            input(type="text", name="hashtags", value=video.hashtags.join(), placeholder="Hashtags, seperated by comma.", required)
            input(type="submit", value="Save")